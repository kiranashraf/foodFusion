                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.28"
                android:src="@drawable/no_internet"
                android:layout_gravity="center"/>

            <TextView
